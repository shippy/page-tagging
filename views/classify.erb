<div id="tagging">
	<% form_tag('/submit', method: 'post') do  %>
		<%= hidden_field_tag :url, value: @url %>
	<p><%= label_tag(:tagger) %>
	<%= text_field_tag(:tagger) %>
	</p>
	<%= radio_button_tag :tag, value: 'conservative' %>Conservative
	<%= radio_button_tag :tag, value: 'progressive' %>Progressive
	<%= radio_button_tag :tag, value: 'neutral' %>Neutral
	<%= radio_button_tag :tag, value: 'review' %>Flag for review
	<ul>
		<li>Conservative</li>
		<li>Neutral</li>
		<li>Progressive</li>
		<li>Flag for review</li>
	</ul>
	<%= submit_tag("Tag!") %>
<% end %>
</div>
<iframe src="<%= @url %>" height="600" width="800">
	Could not load the page. Try reloading? If the problem persists, mark this for review.
</iframe>
