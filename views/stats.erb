<div id="ranking-page">
<% unless @count.empty? %>
<h1>Tagger ranking</h1>
<table id="ranking">
  <thead>
    <tr>
      <td>Rank</td>
      <td>Name</td>
      <td>Number of pages tagged</td>
    </tr>
  </thead>
  <tbody>
  <% i = 0 %>
  <% @count.each do |tagger, count| %>
    <tr>
      <td><%= i += 1 %>.</td>
      <td><%= tagger %><%= '<img src="http://warriorcatsrpg.com/awards/26747-mini.png" />' if i == 1 %></td>
      <td><%= count %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<p>Because no page has been tagged yet, there are no statistics available! <a href="/">Go tag some.</a></p>
<% end %>
</div>